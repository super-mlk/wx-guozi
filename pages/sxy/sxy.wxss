/* pages/academy/academy.wxss */

.container {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  position: relative;
}

.container .tab{
  width: 100%;
  height: 100rpx;
}

.container .tab view{
  width: 33%;
  height: 100rpx;
  line-height: 100rpx;
  float: left;
  text-align: center;
}

.container .tab view text{
  font-size: 32rpx;
}

.container .tab view:last-child{
  width: 34%;
}


.container .tab view image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-left: 8rpx;
}

.container .onlineVideo{
  width: 100%;
  height: 240rpx;
}

.container .onlineVideo .ov-list{
  width: 100%;
  height: 240rpx;
  margin-top: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.container .onlineVideo .ov-list .ov-left{
  width: 274rpx;
  height: 200rpx;
  float: left;
  text-align: center;
  margin-left: 20rpx;
}

.container .onlineVideo .ov-list .ov-left image{
  width: 274rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.container .onlineVideo .ov-list .ov-right{
  width: 434rpx;
  height: 200rpx;
  float: left;
  margin-left: 18rpx;
}

.container .onlineVideo .ov-list .ov-right .ovr-title{
  width: 100%;
  height: 60rpx;
  display: block;
  line-height: 60rpx;
  font-size: 36rpx;
  font-weight: bold;
}

.container .onlineVideo .ov-list .ov-right .ovr-nameInfo{
  font-size: 26rpx;
}

.container .onlineVideo .ov-list .ov-right .ovr-time{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  display: block;
  font-size: 26rpx;
}



/*分类  */
/*排行分类  */
.container .Ranking-classification{
  width: 100%;
  height: auto;
  position: absolute;
  top: 100rpx;
  left: 0rpx;
  background: #fff;
}


.container .Ranking-classification text{
  width: 100%;
  height: 76rpx;
  display: block;
  border-bottom: 1px solid #ceced0;
  padding-left: 20rpx;
  line-height: 76rpx;
  font-size: 28rpx;
}


.container .Ranking-classification text:first-child{
    border-top: 1px solid #ceced0;
}

 .active{
    background: #e6e6e6;
}