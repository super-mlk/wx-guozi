/* pages/me/me.wxss */

.container {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.container .header {
  width: 100%;
  height: 160rpx;
}

.container .header .headPortraits {
  width: 112rpx;
  height: 112rpx;
  float: left;
  margin-left: 40rpx;
 
  border-radius: 50%;
  border:2px solid #2da1dc;
  margin-top:22rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.container .header .headPortraits image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 1px solid #2da1dc;
}

.container .header .vip {
  height: 160rpx;
  line-height: 160rpx;
  color: #bdbdbd;
}
.container .header .vip text{
  padding-left:20rpx;
  font-size: 48rpx;
}

/*登录  */

.container .login {
  width: 100%;
  height: 80rpx;
  border-top: 4px solid #f0f0f0;
  border-bottom: 4px solid #f0f0f0;
}

.container .login .icon {
  width: 60%;
  height: 80rpx;
  float: left;
  line-height: 80rpx;
}

.container .login .icon image {
  width: 30rpx;
  height: 30rpx;
  padding-left: 40rpx;
  vertical-align: middle;
}

.container .login .icon text {
  color: #212121;
  padding-left: 30rpx;
  letter-spacing: 4px;
  font-size: 28rpx;
}

.container .login .more {
  width: 40%;
  height: 80rpx;
  float: right;
  text-align: right;
  line-height: 80rpx;
}

.container .login .more text {
  font-size: 32rpx;
  margin-right: 30rpx;
  color: #797979;
}

.container .footer {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.container .footer text {
  border-bottom: 2px solid #e0e0e0;
  color: #e0e0e0;
  font-size: 24rpx;
}

.container .footer text:first-child {
  margin-right: 8rpx;
}

.container .footer text:nth-child(2) {
  font-size: 20rpx;
  margin-bottom: 4rpx;
}

.container .footer text:last-child {
  margin-left: 8rpx;
}
