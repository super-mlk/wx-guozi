.content .specialist .info {
    width: auto;
    height: auto;
    position: absolute;
    right: 20rpx;
    top: 4rpx;
}

.content .specialist .info text {
    width: 100%;
    height: auto;
    display: block;
    font-size: 40rpx;
    color: #999;
    text-align: right;
}

.content .specialist .info text:first-child {
    font-size: 28rpx;
    color: #ff6f07;
    padding-bottom: 8rpx;
}

.guding {
    position: fixed;
    top: 0;
    left: 0;
    background: #fff;
    z-index: 99;
}