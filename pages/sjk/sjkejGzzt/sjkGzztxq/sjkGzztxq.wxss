.container {
    width: 100%;
    height: 100%;
    overflow-x: hidden;
}

.container .header {
    width: 100%;
    height: 280rpx;
    margin-top: 20rpx;
}

.container .header image {
    width: 100%;
    height: 280rpx;
}

.container .info {
    width: 100%;
    height: auto;
    border-bottom: 10px solid #e6e6e6;
    display: flex;
    flex-direction: column;
}

.container .info view {
    width: 100%;
    height: auto;
    line-height: 80rpx;
    font-size: 28rpx;
    margin-left: 20rpx;
    display: flex;
    flex-direction: row;
}

.container .info view text:nth-child(1) {
   width: 175rpx;
   height: auto;
    display: block;
    float: left;
}

.container .info view text:nth-child(2) {
    width: 600rpx;
    height: auto;
    display: block;
    margin-left: 10rpx;
    margin-right: 30rpx;
}

